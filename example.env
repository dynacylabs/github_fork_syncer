GITHUB_TOKEN=your_github_token

# Single user mode (deprecated - use GITHUB_USERNAMES instead)
GITHUB_USERNAME=your_github_username

# Multi-user mode - comma or space separated usernames
# Examples:
#   GITHUB_USERNAMES="user1,user2,user3"
#   GITHUB_USERNAMES="user1 user2 user3"
#   GITHUB_USERNAMES="dynacylabs,octocat,github"
GITHUB_USERNAMES=your_username1,your_username2,your_username3

REPO_BASE_DIR=/workspaces/github_fork_syncer/repos

# Sync schedule (cron-like syntax)
# Examples:
#   "0 0 * * *"   - Daily at midnight
#   "0 */6 * * *" - Every 6 hours
#   "*/30 * * * *" - Every 30 minutes
#   "0 2 * * 1-5" - Weekdays at 2 AM
SYNC_SCHEDULE="0 0 * * *"

# Whether to run sync immediately on container startup
# Options: "true" or "false"
RUN_ON_STARTUP=true

# Git configuration for merge commits
# These are required for Git merge operations
GIT_USER_NAME="GitHub Fork Syncer"
GIT_USER_EMAIL="github-fork-syncer@users.noreply.github.com"

# Branch synchronization settings
# SYNC_MODE options: "default" (only default branch), "all" (all branches), "selective" (pattern-based)
SYNC_MODE=all

# Branch patterns for selective sync (comma-separated, supports wildcards)
# Examples:
#   SYNC_BRANCHES="main,master,develop"
#   SYNC_BRANCHES="main,develop,feature/*,release/*"
#   SYNC_BRANCHES="main,dev*,hotfix/*"
SYNC_BRANCHES="main,master,develop,dev,feature/*,release/*"

# Whether to create new branches from upstream that don't exist in your fork
# Options: "true" or "false"
CREATE_NEW_BRANCHES=true